{
  "manifest_version": 3,
  "name": "X-Scanner",
  "version": "1.0",
  "description": "A Chrome extension that scans tweets for hate speech and inflammatory content using GPT-based reasoning models.",
  "content_scripts": [
    {
      "matches": ["https://x.com/home"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup/popup.html", "popup/popup.css"],
      "matches": ["https://x.com/*"]
    }
  ],
  "permissions": ["activeTab"]
}